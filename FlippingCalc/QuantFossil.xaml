        <!-- Sell -->
        <TextBox x:Name="QuantSellEncrusted" Grid.Row="3" Grid.Column="5" Style="{StaticResource Quantbox}"></TextBox>
        <!-- Frigid -->
        <Image Grid.Column="3" Grid.Row="4" HorizontalAlignment="center" Height="30" VerticalAlignment="Top" Width="30" Source="Images/Orbs/Frigid_Fossil.png" Grid.ColumnSpan="3" Grid.RowSpan="2" ToolTip="Frigid Fossil"/>
