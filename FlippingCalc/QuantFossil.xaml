        <Image Grid.Column="3" Grid.Row="7" HorizontalAlignment="center" Height="30" VerticalAlignment="Top" Width="30" Source="Images/Orbs/Metallic_Fossil.png" Grid.ColumnSpan="3" Grid.RowSpan="2" ToolTip="Metallic Fossil"/>
