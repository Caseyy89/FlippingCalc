        <!-- Sell -->
        <TextBox x:Name="QuantSellEnchanted" Grid.Row="3" Grid.Column="2" Style="{StaticResource Quantbox}"></TextBox>
        <!-- Faceted -->
        <Image Grid.Row="4" HorizontalAlignment="center" Height="30" VerticalAlignment="Top" Width="30" Source="Images/Orbs/Faceted_Fossil.png" Grid.ColumnSpan="3" Grid.RowSpan="2" ToolTip="Faceted Fossil"/>
        <!-- Buy -->
